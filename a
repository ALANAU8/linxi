        // ç”Ÿæˆå­¸ç¿’è·¯å¾‘
        function generateLearningPath() {
            const learningStyle = document.getElementById('learningStyle').value;
            const attentionSpan = document.getElementById('attentionSpan').value;
            const learningPace = document.getElementById('learningPace').value;
            const learningGoal = document.getElementById('learningGoal').value;
            const proficiencyLevel = document.getElementById('proficiencyLevel').value;
            const timeCommitment = document.getElementById('timeCommitment').value;
            
            // ç²å–é¸ä¸­çš„èˆˆè¶£é ˜åŸŸ
            const interests = [];
            const interestCheckboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            interestCheckboxes.forEach(checkbox => {
                interests.push(checkbox.value);
            });
            
            const specificTopics = document.getElementById('specificTopics').value;
            
            // ç”ŸæˆAIåˆ†ææ–‡æœ¬
            let analysisText = "æ ¹æ“šä½ çš„å­¸ç¿’é¢¨æ ¼å’Œç›®æ¨™ï¼ŒAIå»ºè­°";
            
            if (learningStyle === 'visual') {
                analysisText += "æ¡ç”¨è¦–è¦ºåŒ–å­¸ç¿’æ–¹æ³•ï¼Œå¤šä½¿ç”¨åœ–è¡¨ã€å½±ç‰‡å’Œåœ–åƒä¾†å¹«åŠ©ç†è§£æ¦‚å¿µã€‚";
            } else if (learningStyle === 'auditory') {
                analysisText += "æ¡ç”¨è½è¦ºå­¸ç¿’æ–¹æ³•ï¼Œå¤šåƒèˆ‡è¨è«–å’Œè½å–è¬›è§£ä¾†å¼·åŒ–å­¸ç¿’æ•ˆæœã€‚";
            } else if (learningStyle === 'kinesthetic') {
                analysisText += "æ¡ç”¨å¯¦è¸å­¸ç¿’æ–¹æ³•ï¼Œé€éå‹•æ‰‹æ“ä½œå’Œå¯¦éš›æ‡‰ç”¨ä¾†éå›ºçŸ¥è­˜ã€‚";
            } else {
                analysisText += "æ¡ç”¨é–±è®€å­¸ç¿’æ–¹æ³•ï¼Œé€éæ·±å…¥é–±è®€å’Œç­†è¨˜ä¾†æŒæ¡çŸ¥è­˜ã€‚";
            }
            
            if (attentionSpan === 'short') {
                analysisText += " è€ƒæ…®åˆ°ä½ çš„æ³¨æ„åŠ›é›†ä¸­æ™‚é–“è¼ƒçŸ­ï¼Œå»ºè­°å°‡å­¸ç¿’å…§å®¹åˆ†æˆå°æ¨¡çµ„ï¼Œæ¯15-25åˆ†é˜ä¼‘æ¯ä¸€æ¬¡ã€‚";
            } else if (attentionSpan === 'medium') {
                analysisText += " è€ƒæ…®åˆ°ä½ çš„æ³¨æ„åŠ›é›†ä¸­æ™‚é–“ä¸­ç­‰ï¼Œå»ºè­°æ¯30-45åˆ†é˜å®‰æ’ä¸€æ¬¡ä¼‘æ¯ã€‚";
            } else {
                analysisText += " è€ƒæ…®åˆ°ä½ çš„æ³¨æ„åŠ›é›†ä¸­æ™‚é–“è¼ƒé•·ï¼Œå¯ä»¥å®‰æ’è¼ƒé•·çš„å­¸ç¿’æ™‚æ®µï¼Œä½†ä¹Ÿè¦æ³¨æ„é©ç•¶ä¼‘æ¯ã€‚";
            }
            
            if (learningPace === 'slow') {
                analysisText += " ä½ çš„å­¸ç¿’ç¯€å¥è¼ƒæ…¢ï¼Œå»ºè­°æ·±å…¥ç†è§£æ¯å€‹æ¦‚å¿µï¼Œä¸è¿½æ±‚é€Ÿåº¦ã€‚";
            } else if (learningPace === 'fast') {
                analysisText += " ä½ çš„å­¸ç¿’ç¯€å¥è¼ƒå¿«ï¼Œå»ºè­°å…ˆæŒæ¡å¤§ç¶±å’Œæ ¸å¿ƒæ¦‚å¿µï¼Œå†æ·±å…¥ç´°ç¯€ã€‚";
            } else {
                analysisText += " ä½ çš„å­¸ç¿’ç¯€å¥é©ä¸­ï¼Œå»ºè­°å¹³è¡¡æ·±åº¦å’Œé€²åº¦ã€‚";
            }
            
            // æ ¹æ“šå­¸ç¿’ç›®æ¨™æä¾›å»ºè­°
            if (learningGoal === 'academic') {
                analysisText += " é‡å°å­¸æ¥­é€²æ­¥ç›®æ¨™ï¼Œå»ºè­°å°ˆæ³¨æ–¼åŸºç¤æ¦‚å¿µçš„å»ºç«‹å’Œè€ƒè©¦æŠ€å·§çš„ç·´ç¿’ã€‚";
            } else if (learningGoal === 'career') {
                analysisText += " é‡å°è·æ¥­ç™¼å±•ç›®æ¨™ï¼Œå»ºè­°æ³¨é‡å¯¦ç”¨æŠ€èƒ½å’Œè¡Œæ¥­ç›¸é—œçŸ¥è­˜çš„å­¸ç¿’ã€‚";
            } else if (learningGoal === 'certification') {
                analysisText += " é‡å°å°ˆæ¥­èªè­‰ç›®æ¨™ï¼Œå»ºè­°æŒ‰ç…§èªè­‰è€ƒè©¦å¤§ç¶±é€²è¡Œç³»çµ±æ€§å­¸ç¿’å’Œæ¨¡æ“¬æ¸¬è©¦ã€‚";
            } else if (learningGoal === 'dse') {
                analysisText += " é‡å°DSEè€ƒè©¦ç›®æ¨™ï¼Œå»ºè­°æŒ‰ç…§è€ƒè©•å±€å¤§ç¶±é€²è¡Œç³»çµ±è¤‡ç¿’ï¼Œä¸¦å¤šåšæ­·å±†è©¦é¡Œã€‚";
            } else {
                analysisText += " é‡å°å€‹äººèˆˆè¶£ç›®æ¨™ï¼Œå»ºè­°ä¿æŒå­¸ç¿’çš„æ¨‚è¶£å’Œæ¢ç´¢ç²¾ç¥ã€‚";
            }
            
            document.getElementById('aiAnalysisText').textContent = analysisText;
            
            // ç”Ÿæˆå­¸ç¿’è·¯å¾‘
            const learningPath = document.getElementById('learningPath');
            learningPath.innerHTML = '';
            
            // æ ¹æ“šèˆˆè¶£é ˜åŸŸç”Ÿæˆå­¸ç¿’æ¨¡çµ„
            const modules = [];
            
            if (interests.includes('math')) {
                modules.push({
                    title: 'æ•¸å­¸åŸºç¤æ¦‚å¿µ',
                    icon: 'ğŸ§®',
                    description: 'å»ºç«‹æ•¸å­¸æ€ç¶­åŸºç¤ï¼ŒæŒæ¡æ ¸å¿ƒæ¦‚å¿µå’Œå…¬å¼',
                    duration: '2é€±',
                    status: 'current',
                    details: 'å¾ä»£æ•¸ã€å¹¾ä½•å’ŒåŸºç¤çµ±è¨ˆå­¸é–‹å§‹ï¼Œå»ºç«‹æ•¸å­¸æ€ç¶­æ¡†æ¶ã€‚',
                    resources: learningResources.math
                });
                
                if (proficiencyLevel === 'intermediate' || proficiencyLevel === 'advanced') {
                    modules.push({
                        title: 'é«˜ç´šæ•¸å­¸æ‡‰ç”¨',
                        icon: 'ğŸ“Š',
                        description: 'å­¸ç¿’å¾®ç©åˆ†ã€ç·šæ€§ä»£æ•¸å’Œæ¦‚ç‡è«–',
                        duration: '3é€±',
                        status: 'pending',
                        details: 'æ·±å…¥ç†è§£æ•¸å­¸åœ¨ç¾å¯¦ä¸–ç•Œä¸­çš„æ‡‰ç”¨ï¼Œè§£æ±ºè¤‡é›œå•é¡Œã€‚',

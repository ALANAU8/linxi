                    resources: learningResources.language
                });
            }
            
            if (interests.includes('dse')) {
                modules.push({
                    title: 'DSEè€ƒè©¦æ¦‚è¦½',
                    icon: 'ğŸ“',
                    description: 'äº†è§£DSEè€ƒè©¦çµæ§‹ã€è©•åˆ†æ¨™æº–å’Œæº–å‚™ç­–ç•¥',
                    duration: '1é€±',
                    status: 'current',
                    details: 'å…¨é¢äº†è§£DSEè€ƒè©¦çš„å„å€‹æ–¹é¢ï¼ŒåŒ…æ‹¬å¿…ä¿®ç§‘ç›®å’Œé¸ä¿®ç§‘ç›®ã€‚',
                    resources: learningResources.dse
                });
                
                if (interests.includes('math')) {
                    modules.push({
                        title: 'DSEæ•¸å­¸å‚™è€ƒ',
                        icon: 'ğŸ§®',
                        description: 'æŒæ¡DSEæ•¸å­¸è€ƒè©¦è¦é»å’Œç­”é¡ŒæŠ€å·§',
                        duration: '4é€±',
                        status: 'pending',
                        details: 'é‡é»è¤‡ç¿’DSEæ•¸å­¸å¿…ä¿®éƒ¨åˆ†ï¼ŒåŒ…æ‹¬æ•¸èˆ‡ä»£æ•¸ã€åº¦é‡ã€åœ–å½¢èˆ‡ç©ºé–“ã€æ•¸æ“šè™•ç†ç­‰ä¸»é¡Œã€‚',
                        resources: learningResources.dse
                    });
                }
                
                if (interests.includes('biology')) {
                    modules.push({
                        title: 'DSEç”Ÿç‰©å‚™è€ƒ',
                        icon: 'ğŸ§¬',
                        description: 'æŒæ¡DSEç”Ÿç‰©è€ƒè©¦è¦é»å’Œå¯¦é©—æŠ€å·§',
                        duration: '4é€±',
                        status: 'pending',
                        details: 'é‡é»è¤‡ç¿’DSEç”Ÿç‰©ç§‘ï¼ŒåŒ…æ‹¬ç´°èƒèˆ‡ç”Ÿå‘½åˆ†å­ã€éºå‚³èˆ‡é€²åŒ–ã€ç”Ÿç‰©èˆ‡ç’°å¢ƒç­‰ä¸»é¡Œã€‚',
                        resources: learningResources.dse
                    });
                }
                
                if (interests.includes('physics') || interests.includes('chemistry') || interests.includes('biology')) {
                    modules.push({
                        title: 'DSEç§‘å­¸ç§‘ç›®å‚™è€ƒ',
                        icon: 'ğŸ”¬',
                        description: 'æŒæ¡DSEç§‘å­¸ç§‘ç›®è€ƒè©¦è¦é»å’Œå¯¦é©—æŠ€å·§',
                        duration: '4é€±',
                        status: 'pending',
                        details: 'æ ¹æ“šé¸æ“‡çš„ç§‘å­¸ç§‘ç›®ï¼Œé‡é»è¤‡ç¿’ç›¸é—œç†è«–çŸ¥è­˜å’Œå¯¦é©—æŠ€èƒ½ã€‚',
                        resources: learningResources.dse
                    });
                }
            }
            
            // å¦‚æœæœ‰ç‰¹å®šä¸»é¡Œï¼Œæ·»åŠ è‡ªå®šç¾©æ¨¡çµ„
            if (specificTopics) {
                modules.push({
                    title: `å°ˆé¡Œç ”ç©¶: ${specificTopics}`,
                    icon: 'ğŸ”',
                    description: 'æ·±å…¥æ¢ç´¢ä½ æ„Ÿèˆˆè¶£çš„ç‰¹å®šä¸»é¡Œ',
                    duration: '4é€±',
                    status: 'pending',
                    details: 'æ ¹æ“šä½ çš„å…·é«”èˆˆè¶£é ˜åŸŸï¼Œè¨­è¨ˆå€‹æ€§åŒ–çš„æ·±å…¥å­¸ç¿’è¨ˆåŠƒã€‚',
                    resources: []
                });
            }
            
            // æ ¹æ“šå­¸ç¿’é¢¨æ ¼èª¿æ•´æ¨¡çµ„é †åºå’Œå…§å®¹
            if (learningStyle === 'visual') {
                modules.forEach(module => {
                    if (module.resources) {
                        module.resources = module.resources.filter(r => r.type === 'video' || r.type === 'interactive' || r.type === '3d');
                    }
                });
            } else if (learningStyle === 'auditory') {
                modules.forEach(module => {
                    if (module.resources) {
                        module.resources = module.resources.filter(r => r.type === 'video' || r.type === 'course');
                    }
                });
            } else if (learningStyle === 'reading') {
                modules.forEach(module => {
                    if (module.resources) {
                        module.resources = module.resources.filter(r => r.type === 'book' || r.type === 'documentation' || r.type === 'resource');
                    }
                });
            }
            
            // æ·»åŠ è¤‡ç¿’å’Œå¯¦è¸æ¨¡çµ„
            modules.push({
                title: 'ç¶œåˆå¯¦è¸èˆ‡è¤‡ç¿’',
                icon: 'ğŸ”„',
                description: 'æ•´åˆæ‰€å­¸çŸ¥è­˜ï¼Œé€²è¡Œç¶œåˆæ‡‰ç”¨å’Œè¤‡ç¿’',
                duration: '2é€±',
                status: 'pending',
                details: 'é€šéé …ç›®å¯¦è¸å’Œç¶œåˆç·´ç¿’ï¼Œéå›ºæ‰€å­¸çŸ¥è­˜ä¸¦ç™¼ç¾éœ€è¦åŠ å¼·çš„é ˜åŸŸã€‚'
            });
            
            // æ¸²æŸ“å­¸ç¿’è·¯å¾‘
            modules.forEach(module => {
                const pathItem = document.createElement('div');
                pathItem.className = 'path-item';
                
                let resourcesHTML = '';
                if (module.resources && module.resources.length > 0) {
                    resourcesHTML = '<div class="path-resources">æ¨è–¦è³‡æº: ';
                    module.resources.forEach(resource => {
                        resourcesHTML += `<a href="${resource.url}" target="_blank" class="resource-link">${resource.name}</a>`;
                    });
                    resourcesHTML += '</div>';
                }
                
                pathItem.innerHTML = `
                    <div class="path-icon">${module.icon}</div>
                    <div class="path-content">
                        <div class="path-title">${module.title}</div>
                        <div class="path-desc">${module.description} â€¢ é è¨ˆæ™‚é•·: ${module.duration}</div>
                        <div class="path-details">${module.details}</div>
                        ${resourcesHTML}
                    </div>
                    <div class="path-status status-${module.status}">${module.status === 'current' ? 'é€²è¡Œä¸­' : 'å¾…é–‹å§‹'}</div>
                `;
                
                learningPath.appendChild(pathItem);
            });
            
            // æ·»åŠ å­¸ç¿’å»ºè­°
            const adviceItem = document.createElement('div');
            adviceItem.className = 'path-item';
            adviceItem.innerHTML = `
                <div class="path-icon">ğŸ’¡</div>
                <div class="path-content">
                    <div class="path-title">å­¸ç¿’å»ºè­°</div>
                    <div class="path-desc">æ ¹æ“šä½ çš„å­¸ç¿’é¢¨æ ¼å’Œç›®æ¨™å®šåˆ¶çš„å»ºè­°</div>
                    <div class="path-details">
                        <ul>
                            <li>æ¯é€±å®‰æ’å›ºå®šå­¸ç¿’æ™‚é–“ï¼Œä¿æŒé€£çºŒæ€§</li>
